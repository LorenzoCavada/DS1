<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" strict="true">
    <Properties>
        <Property name="appName">EasyCache</Property>
    </Properties>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%-12d{HH:mm:ss,SSS} [%highlight{%-5level}] %-24c:%-4L - %msg%n"
                           disableAnsi="false"/>
        </Console>
        <File name="file" fileName="${appName}.log" append="false">
            <PatternLayout pattern="%-12d{HH:mm:ss,SSS} [%-5level] %-24c:%-4L - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="INFO" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="file"/>
        </Root>
    </Loggers>
</Configuration>
